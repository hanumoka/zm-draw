{
  "name": "@zm-draw/react",
  "version": "0.1.0",
  "description": "React components for zm-draw diagram editor",
  "license": "MIT",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./styles.css": "./dist/styles.css",
    "./styles/variables.css": "./dist/variables.css"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup && npm run copy-styles",
    "copy-styles": "node -e \"const fs=require('fs');const path=require('path');fs.mkdirSync('dist',{recursive:true});fs.copyFileSync('src/styles/index.css','dist/styles.css');fs.copyFileSync('src/styles/variables.css','dist/variables.css');console.log('Copied CSS files to dist/')\"",
    "dev": "tsup --watch",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@zm-draw/core": "workspace:*",
    "konva": "^10.0.0",
    "y-indexeddb": "^9.0.12",
    "y-websocket": "^3.0.0",
    "yjs": "^13.6.29",
    "zustand": "^5.0.10"
  },
  "devDependencies": {
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "tsup": "^8.3.0",
    "typescript": "^5.7.0"
  },
  "peerDependencies": {
    "react": ">=18",
    "react-dom": ">=18"
  },
  "keywords": [
    "react",
    "konva",
    "diagram",
    "erd",
    "flowchart",
    "canvas"
  ]
}
