{
  "name": "@zm-draw/react",
  "version": "0.1.0",
  "description": "React components for zm-draw diagram editor",
  "license": "MIT",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./styles.css": "./dist/styles.css",
    "./styles/variables.css": "./dist/variables.css"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsdown && npm run copy-styles",
    "copy-styles": "node --input-type=module -e \"import fs from 'fs';fs.mkdirSync('dist',{recursive:true});fs.copyFileSync('src/styles/index.css','dist/styles.css');fs.copyFileSync('src/styles/variables.css','dist/variables.css');console.log('Copied CSS files to dist/')\"",
    "dev": "npm run copy-styles && tsdown --watch",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@radix-ui/react-popover": "^1.1.15",
    "@radix-ui/react-tooltip": "^1.1.8",
    "@zm-draw/core": "workspace:*",
    "konva": "^10.0.0",
    "react-colorful": "^5.6.1",
    "zustand": "^5.0.10"
  },
  "devDependencies": {
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "tsdown": "^0.20.3",
    "typescript": "^5.7.0"
  },
  "peerDependencies": {
    "react": ">=18",
    "react-dom": ">=18"
  },
  "optionalDependencies": {
    "@zm-draw/collaboration": "workspace:*"
  },
  "keywords": [
    "react",
    "konva",
    "diagram",
    "erd",
    "flowchart",
    "canvas"
  ]
}
